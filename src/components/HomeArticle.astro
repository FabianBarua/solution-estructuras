---
interface Props {
  id: number;
  title: string;
  visibility?: number;
  image: string;
}

const { visibility = 70, title, id, image }: Props = Astro.props;
---

<article
  class="rounded-[41px] size-56 overflow-hidden relative"
  style="box-shadow: rgba(0, 0, 0, .4) -15px 15px 30px 10px;"
>
  <div
    style={{
      backgroundImage: `linear-gradient(to top, var(--tw-gradient-stops)${visibility}%);`,
    }}
    class={`w-full opa h-full absolute  from-black/80`}
  >
  </div>
  {
    title && id && (
      <a
        href="/productos/1"
        class="transition-all absolute pointer-events-auto  bg-customBlue-500 hover:-translate-y-2 hover:bg-customBlue-400 w-[80%] bottom-4 left-1/2 -translate-x-1/2 px-3 py-2 text-center text-2xl truncate text-white rounded-2xl"
      >
        Â¿{title}?
      </a>
    )
  }
  <img class="rounded-[41px] object-cover w-full h-full" src={image} />
</article>
